{# templates/search/results.html.twig #}


{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="/assets/css/search-result.css"/>
{% endblock %}

{% block body %}

	{% if results is not empty %}
		<ul class="search--result--list">
			{% for result in results %}
				<a href="anime/{{ result.id }}">
					<li>
						<div>
							<img  class="search--image"src="{{ result.image }}" alt="">
						</div>

						<div class="search--title">
							{{ result.title }}
						</div>
					</li>
				</a>
			{% endfor %}
		</ul>
	{% else %}
		<p>Aucun resultat trouv√©.</p>
	{% endif %}

{% endblock %}
